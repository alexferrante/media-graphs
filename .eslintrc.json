{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "standard", "plugin:react/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "latest"
    }
  },
  "rules": {
    "jsx-quotes": ["error", "prefer-single"]
  }
}
